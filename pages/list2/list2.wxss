.container {
  padding-top: 10px;
  padding-left: 5px;
  padding-right: 5px;
}
.img {
  border-radius: 2ch;
  height: 260px;
}
.chapters {
  position: relative;
  width: 100%;
  border-radius: 2ch;
  margin-bottom: 10px;
  height: 300px;
  background-color: rgba(235, 225, 225, 0.8);
}
.brief {
  position: absolute;
  width: 100%;         
  height: 25px;           
  bottom: 7px;
  left: 50%;              
  transform: translateX(-50%); 
  display: flex;          
  justify-content: center;
  align-items: center;
}
